<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      @media (max-width: 1500px) {
          .form {
              height: 35% !important;
              width: 90% !important;
              padding: 10px !important;
          }
      }
      
  </style>
</head>
<body style="background-color: rgb(0, 0, 0);">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-primary navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><b>URL SHORTENER</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
           
        </div>
    </nav>
    
    <!-- Form Container -->
    <div class="center-container" style="display: flex; justify-content: center; align-items: center; height: 80vh; background-color: black;">
        <div class="form" style="height: 50%; width: 80%; background-color: rgb(0, 128, 255); color: white; padding: 20px; border-radius: 10px; ">
            
            <!-- Form for URL Input -->
            <form action="/url" method="POST">
                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Your URL</label>
                    <input value="<%= originalUrl %>" 
       type="url" 
       class="form-control" 
       id="formGroupExampleInput" 
       placeholder="Enter your URL here" 
       name="url" 
       required
       pattern="https?://.*"
       title="Please enter a valid URL starting with http:// or https://">  </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-light">Generate</button>
                </div>
            </form>

            <!-- Display the generated short URL -->
            <% if (id) { %>
                <div class="mt-4">
                    <label for="generatedUrl" class="form-label">Shortened URL:</label>
                    <p id="generatedUrl" style="color: white;">
                        <a style="color: white; text-decoration: underline;" href="https://url-shortner-3-e1z6.onrender.com/url/<%= id %>" target="_blank">http://localhost:8003/url/<%= id %></a>
                    </p>
                </div>
            <% } %>

            <!-- Display error message if present -->
            <% if (error) { %>
                <div class="alert alert-danger mt-3">
                    <%= error %>
                </div>
            <% } %>

        </div>
    </div>
   <div style="background-color: rgb(0, 0, 0);">
      <div style="margin: 45px;" class="mb-3 table-responsive" > 
        <table class="table table-bordered w-100 table-dark"  >
          <thead >
            <tr>
              <th>S.NO</th>
              <th>Short_ID</th>
              <th>Link</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody >
            <% if (urls.length === 0) { %> 
                <tr>
                    <td colspan="4" class="text-center">
                        <a href="https://url-shortner-3-e1z6.onrender.com" style="text-decoration:underline;">Go to analysis</a>
                    </td>
                </tr>
            <% } else { %>
                <% let displayIndex = 1; %> 
                <% urls.forEach((url, index) => { %> <!-- ✅ Corrected loop -->
                    <% if (url.visitHistory.length > 0) { %> <!-- ✅ Moved inside loop -->
                        <tr>
                            <td><%= displayIndex %></td>
                            <td><%= url.shortId %></td>
                            <td><a href="<%= url.redirectUrl %>" target="_blank" style="color: aqua;"><%= url.redirectUrl %></a></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                        <% displayIndex++; %>
                    <% } %>
                <% }); %>  <!-- ✅ Corrected closing tag -->
            <% } %>
        </tbody>
        
        </table>
      </div>
    </div>
   
    
              
         

          
            
           
    
  
   
    <div class="container" style="background-color: black; ">
      <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
          <li class="nav-item"><a href="#" class="nav-link px-2 " style="color: white;">created</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 " style="color: white;">by</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 " style="color: white;">ashmita</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 " style="color: white;">singh</a></li>
          </ul>
        <p class="text-center " style="color: white;">© 2025 Company, Inc</p>
      </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
